{#
/**
* @file
* Presents a list of frequently asked questions.
*
* Available Variables:
*   - faq_nodes: array of faq nodes with title (the question),
*     body, and an array of categories.
*/
#}

<form action="" method="GET">
    <label id="lbl-search" class="visually-hidden" for="inp-search">Search</label>

    <div class="row mb-5">

        <div class="col-12 col-md-4 me-3 mb-3 mb-md-0">
            <input id="inp-search" class="form-control" type="text" name="keywords">
        </div>

        <div id="btn-row" class="col-12 col-md-4 d-flex flex-row justify-content-center justify-content-md-start">
            <button class="btn btn-primary me-2" type="submit">Search</button>
            <a class="btn btn-dark me-3" href="?keywords=&category=">Clear</a>
        </div>
    </div>
</form>

{% for faq in faq_nodes %}
<div class="question">
    <h3>{{ faq.title.value }}</h3>
    <p>{{ faq.body.value|raw }}</p>

    <div class="d-flex flex-row align-items-center">
        <p class="mb-0 me-1">Categories: </p>
        {% for category in faq.field_faq_categories %}
        <a class="btn btn-sm btn-primary me-1" href="?category={{ category.entity.name.value|url_encode }}">{{ category.entity.name.value }}</a>
        {% endfor %}
    </div>

    <hr class="my-4">
</div>
{% endfor %}
