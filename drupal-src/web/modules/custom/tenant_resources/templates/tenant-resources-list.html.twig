{#
/**
* @file
* Presents a list of tenant resources.
*
* Available Variables:
*   - tenant_resource_nodes: array of tenant resource nodes with title
*   (the question), body, and an array of categories.
*   - introduction: text used to introduce the page
*/
#}

<div class="row row-cols-1 row-cols-lg-3 gx-4 gy-4 mb-5 mt-1">
    {% for resource in tenant_resource_nodes %}
        <div class="col">
            <div class="card h-100 bg-dark text-light shadow d-flex flex-column">
                {% if resource.field_image %}
                    <div class="tenant-resource__card-top">
                        <img class="tenant-resource__card-image" src="{{ file_url(resource.field_image.entity.uri.value) }}" alt="{{ resource.field_image.alt }}">
                    </div>
                 {% endif %}
                <div class="card-body">
                <h5 class="card-title border-bottom border-light pb-3 mb-3 h3"><a class="link-light" href="/node/{{ resource.id }}">{{ resource.title.value }}</a></h5>
                <p class="card-text">{{ resource.body.summary|raw }}</p>
                </div>

                <div class="d-flex flex-row ps-3 mb-4">
                    {% if resource.field_link_to_resource.0.url %}
                        <a class="align-self-start me-2 btn btn-primary" href="{{ resource.field_link_to_resource.0.url }}">{{ resource.field_link_to_resource.0.title }}</a>
                    {% endif %}
                    <a class="align-self-start me-2 btn btn-primary" href="/node/{{ resource.id }}">More Info</a>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
